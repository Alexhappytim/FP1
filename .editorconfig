# EditorConfig для F# проектов
# https://editorconfig.org/

root = true

# Все файлы
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# F# файлы
[*.{fs,fsx,fsi}]
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 120

# Markdown файлы
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML файлы
[*.{yml,yaml}]
indent_size = 2

# JSON файлы
[*.json]
indent_size = 2

# XML и проектные файлы
[*.{xml,csproj,fsproj,props,targets}]
indent_size = 2
